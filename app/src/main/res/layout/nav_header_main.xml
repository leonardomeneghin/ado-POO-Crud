<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_heard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/azul_principal"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_icon_perfil"
        android:layout_width="100dp"
        android:layout_marginBottom="@dimen/margin_default_micro"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/margin_default_large"
        android:onClick="onClick" />

    <TextView
        android:id="@+id/text_nome_perfil_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_micro"
        android:textSize="@dimen/text_size_card_dog_task"
        android:fontFamily="@font/roboto_condensed_bold"/>

    <TextView
        android:id="@+id/text_email_perfil_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_condensed_bold"
        android:textSize="@dimen/text_size_card_dog_task"
        android:layout_marginStart="@dimen/margin_default_micro"/>

</LinearLayout>